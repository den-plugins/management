<div>
  <p class=" bigfont">Computing &nbsp;<%= image_tag("ajax-loader.gif", :width => '25', :plugin => 'management') %></p>
  <script type="text/javascript">
    setTimeout(function() {
      $('weekly_forecasts_form').request({
        parameters: { 'total_res_available': '<%= params[:total_res_available] %>',
                                   'acctg': '<%= params[:acctg] %>',
                                   'location': '<%= params[:location] %>',
                                   'skill': '<%= params[:skill] %>'},
        onLoading: Element.hide('ajax-indicator')
      });
    }, 10000);
  </script>
  <% form_tag({:action => 'load_weekly_forecasts'}, {:id => 'weekly_forecasts_form'}) {} %>
</div>
